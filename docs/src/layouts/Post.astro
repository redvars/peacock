---
import site from '../_data/site.json';
import Layout from './Default.astro';
interface Props {
  title: any;
  description: string;
}

const {title, description} = Astro.props;
---
<Layout title={title} description={description}  classes='surface'>
<div class='main-content'>

  <pc-container class='page-container'>
    <div class='post-header'>
      <pc-breadcrumb>
        <pc-breadcrumb-item href="/">Home</pc-breadcrumb-item>
        <pc-breadcrumb-item href="/blog">Blog</pc-breadcrumb-item>
        <pc-breadcrumb-item active>{title}</pc-breadcrumb-item>
      </pc-breadcrumb>

      <pc-text type='heading' heading-size='6'>{title}</pc-text>
    </div>


    <div class='post-body'>

      <div class='post'>
        <slot/>
      </div>

      <div class='side-panel'>

      </div>
    </div>
  </pc-container>
  <pc-container>
    <div class='footer container'>
      <pc-divider></pc-divider>
      <div class='footer-content'>
        <pc-text class='legal' type='legal' expressive>
          &copy; {new Date().getFullYear()} <goat-link href={site.author_url}>{site.author}</goat-link>. All Rights Reserved.
        </pc-text>
      </div>
    </div>
  </pc-container>

</div>
</Layout>
