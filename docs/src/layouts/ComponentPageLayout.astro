---
interface Props {
  componentDetails: any;
}

const {componentDetails} = Astro.props;
import Layout from './Default.astro';
import '../styles/component.layout.scss';
import { getCategoriesTree, getComponentDetails, getNextAndPrevious } from '../_data/getComponentDetails';
import Footer from '../components/Footer.astro';

const title = componentDetails.metadata.label;
const description = componentDetails.metadata.description;
const {nextComponent, previousComponent} = getNextAndPrevious(componentDetails.tag);

---

<Layout title={title} description={description} classes='surface'>

  <div class='sidenav m-hide surface' id="component-page">

    <div class='sidenav-components'>

      <goat-tree-view layer='01' value={title} selected-node={title}>
        <goat-tree-node  label="Overview" href='/components'></goat-tree-node>

        {
          getCategoriesTree().map((category) => {
            if (!category.hide) {
              return <goat-tree-node label={category.name}  value={category.name + 'group'}>
                {

                  category.children.map((componentName) => {
                    if (typeof componentName === 'string') {
                      const component = getComponentDetails(componentName);
                      if (component.metadata.name) {
                        return <goat-tree-node label={component.metadata.name} value={component.metadata.name}
                                          href={`/components/${component.tag.replace('goat-', '')}/`}></goat-tree-node>
                      }
                    } else if (componentName.children) {
                      return <goat-tree-node label={componentName.name}  value={componentName.name + 'group'}>
                        {
                          componentName.children.map((componentName) => {
                            const component = getComponentDetails(componentName);
                            if (component.metadata.name) {
                              return <goat-tree-node label={component.metadata.name}  value={component.metadata.name}
                                                href={`/components/${component.tag.replace('goat-', '')}/`}></goat-tree-node>
                            }
                          })
                        }
                      </goat-tree-node>
                    }
                  })
                }
              </goat-tree-node>
            }
          })
        }

      </goat-tree-view>

    </div>

  </div>
  <div class='main-content'>
    <goat-container class='page-wrapper'>

      <div class='comp-header'>
        <h1 class='heading-scrollable pc-text-display'>{title}</h1>


        { componentDetails.metadata.category == 'Up coming' ? <goat-tag color='red'>Work in progress</goat-tag>  : '' }
      </div>

      <slot/>

      <div class='previous-next-nav'>
        <pc-button href={`/components/${previousComponent.metadata.name}/`} icon-align="start">
          <pc-icon slot='icon' name='arrow_left_alt'></pc-icon> Previous
        </pc-button>
        <pc-button kind="simple" href={`/components/${nextComponent.metadata.name}/`}> Next <pc-icon slot='icon' name='arrow_right_alt'>Previous</pc-icon> </pc-button>
      </div>
    </goat-container>

    <div class='footer container'>
      <pc-divider></pc-divider>
      <Footer/>
    </div>
  </div>


</Layout>
