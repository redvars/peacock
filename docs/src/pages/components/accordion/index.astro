---
import Layout from '../../../layouts/LitComponent.astro';
import { getLitComponentDetails } from '../../../_data/getLitComponentDetails.ts';
const componentDetails = getLitComponentDetails('accordion');


import UsageSection from './_sections/Usage.astro';
import MultipleSection from './_sections/Multiple.astro';
import OverviewPanel from '../../../components/OverviewPanel.astro';
import LitApiPanel from '../../../components/LitApiPanel.astro';


const sections = [
  {
    'title': 'Usage',
    'Component': UsageSection,
  },
  {
    'title': 'Multiple',
    'Component': MultipleSection,
  },
];
---
<Layout componentDetails={componentDetails}>
  <pc-tabs class='page-tabs'>
    <pc-tabs-list>
      <pc-tab selected='true'>Overview</pc-tab>
      <pc-tab>API</pc-tab>
    </pc-tabs-list>
    <pc-tab-panel>
      <OverviewPanel  sections={sections} />
    </pc-tab-panel>
    <pc-tab-panel>
      <LitApiPanel componentDetails={componentDetails} />
    </pc-tab-panel>
  </pc-tabs>
</Layout>
