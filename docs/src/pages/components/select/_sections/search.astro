---
import Highlighter from '../../../../components/Highlighter.astro';
---
<goat-card>
  <pc-card-content>
    <goat-select id="search-select" placeholder="Search" search="contains" clearable style="width: 20rem"></goat-select>
    <script is:inline>
      const $search = document.getElementById('search-select');
      $search.items = [
        { label: 'New', value: 'new', icon: 'add' },
        { label: 'Save', value: 'save', icon: 'save' },
        { label: 'Save As', value: 'save-as', icon: 'save--series' },
        {
          label: 'Nadine Brooks',
          value: 'nadine',
          icon: 'pin',
        },
        {
          label: 'Laura Ballard',
          value: 'laura',
          icon: 'calculator',
        },
      ];
      $search.addEventListener('goat:change', function (evt) {
        myConsole.log(JSON.stringify(evt.detail, null, 4));
      });
    </script>
  </pc-card-content>
  <pc-card-content class='no-padding'>
    <Highlighter lang={'html'}>
    <goat-select
      id="search-selected"
      placeholder="Search"
      search="contains"
      clearable>
    </goat-select>
    </Highlighter>
  </pc-card-content>
</goat-card>
