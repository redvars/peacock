---
import Layout from '../../../layouts/Component.astro';
import { getComponentDetails } from '../../../_data/getComponentDetails.ts';
import ApiPanel from '../../../components/ApiPanel.astro';
const componentDetails = getComponentDetails('checkbox');

import UsageSection from './_sections/Usage.astro';
import IntermediateSection from './_sections/Intermediate.astro';
import SizesSection from './_sections/Sizes.astro';
import ReadonlySection from './_sections/Readonly.astro';
import DisabledSection from './_sections/Disabled.astro';
import EventsSection from './_sections/Events.astro';
import OverviewPanel from '../../../components/OverviewPanel.astro';

const sections = [
  {
    'title': 'Usage',
    'Component': UsageSection,
  }, {
    'title': 'Intermediate',
    'Component': IntermediateSection,
  }, {
    'title': 'Sizes',
    'Component': SizesSection,
  }, {
    'title': 'Readonly',
    'Component': ReadonlySection,
  }, {
    'title': 'Disabled',
    'Component': DisabledSection,
  }, {
    'title': 'Events',
    'Component': EventsSection,
  }];
---

<style is:inline>
  goat-checkbox {
    margin: 0 0.5rem 1rem 0;
  }
</style>

<Layout componentDetails={componentDetails}>
  <pc-tabs class='page-tabs'>
    <pc-tabs-list>
      <pc-tab selected='true'>Overview</pc-tab>
      <pc-tab>Playground</pc-tab>
      <pc-tab>API</pc-tab>
    </pc-tabs-list>
    <pc-tab-panel>
      <OverviewPanel componentDetails={componentDetails} sections={sections} />
    </pc-tab-panel>
    <pc-tab-panel>
      <pc-notification type='warning'>Work in progress</pc-notification>
    </pc-tab-panel>
    <pc-tab-panel>
      <ApiPanel componentDetails={componentDetails} />
    </pc-tab-panel>
  </pc-tabs>
</Layout>
