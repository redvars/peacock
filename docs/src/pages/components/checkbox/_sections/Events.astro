---
import Highlighter from '../../../../components/Highlighter.astro';
---
<pc-text>On change of checkbox value a <b>CustomEvent</b> <code class='highlighter-rouge'
                                                                  data-lang='html'>goat:change</code> is triggered by
  the element.
</pc-text>

<goat-card>
  <pc-card-content>
    <goat-checkbox id='change-checkbox-field'>Change Event?</goat-checkbox>
    <script is:inline>
      document.querySelector('#change-checkbox-field').addEventListener('goat-checkbox--change', function(event) {
        myConsole.log('Input changed to :: ' + event.target.value);
      });
    </script>
  </pc-card-content>
  <!-- prettier-ignore -->
  <pc-card-content class='no-padding'>
    <Highlighter lang='javascript' is:raw>
      document.querySelector('#change-checkbox-field').addEventListener('goat-checkbox--change',
      function(event) {
      console.log('Input changed to :: ' + event.target.value);
      });
    </Highlighter>
  </pc-card-content>
</goat-card>
