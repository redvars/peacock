---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import NotificationContent from './notification-content.astro';
---
<pc-text type='body' expressive>High contrast notifications are designed to be more accessible for users with visual
  impairments. They have a higher contrast ratio between the text and background color.
</pc-text>


<HighlighterCard lang={'html'} cssClasses='notification-container'>
  <pc-notification high-contrast dismissible>
    <NotificationContent />
  </pc-notification>
  <pc-notification high-contrast state='success'>
    <NotificationContent />
  </pc-notification>
  <pc-notification high-contrast state='warning'>
    <NotificationContent />
  </pc-notification>
  <pc-notification high-contrast state='error'>
    <NotificationContent />
  </pc-notification>
</HighlighterCard>
