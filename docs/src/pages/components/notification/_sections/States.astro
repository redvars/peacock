---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import NotificationContent from './notification-content.astro';
---
<HighlighterCard lang={'html'} cssClasses='notification-container'>
  <pc-notification>
    <NotificationContent />
  </pc-notification>
  <pc-notification state='success'>
    <NotificationContent />
  </pc-notification>
  <pc-notification state='warning'>
    <NotificationContent />
  </pc-notification>
  <pc-notification state='error'>
    <NotificationContent />
  </pc-notification>
</HighlighterCard>
