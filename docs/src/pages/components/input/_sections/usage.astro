---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<pc-text type='body'>Here are different types of inputs.</pc-text>

<HighlighterCard lang={'html'} cssClasses='demo-input'>
  <pc-input type='text'
              required
              clearable
              label='Text input label'
              helper-text='Optional help text'
              placeholder='Optional placeholder text'
  ></pc-input>

  <br/>

  <pc-input type='password'
              label='Password'
              helper-text='Optional help text'
              placeholder='Optional placeholder text'></pc-input>

  <br/>

  <pc-input type='text'
              skeleton
              required
              clearable
              label='Text input label'
              helper-text=''
              placeholder='Optional placeholder text'
  ></pc-input>

</HighlighterCard>
