---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<goat-text type='body'>Fancy larger or smaller input? Add size attribute for additional sizes.</goat-text>
<HighlighterCard lang={'html'}>

    <goat-input label='Email' type='text' size='lg'>
      <pc-icon slot='start' name='email'></pc-icon>
      <div slot='end'>@example.com</div>
    </goat-input>

    <goat-input type='text' label='Card Number'>
      <pc-icon slot='start' name='purchase'></pc-icon>
      <div slot='end'><goat-spinner></goat-spinner></div>
    </goat-input>

</HighlighterCard>
