---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---

<style is:inline>
  .demo-usage-container .demo-area {
    height: 500px;
    overflow: auto;
  }

  .demo-usage-container .demo-area-inner {
    height: 300%;
    width: 300%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
</style>

<HighlighterCard lang='html' cssClasses='demo-usage-container'>


  <pc-popover id='popover' trigger='hover' open>
    <p-icon name='settings' style='cursor: pointer'></p-icon>

    <pc-popover-content>
      <pc-input label='Name' layer='01'></pc-input>
      <pc-input label='Email' layer='01'></pc-input>
      <pc-button>Submit</pc-button>
    </pc-popover-content>

    <div slot='start'></div>
  </pc-popover>


</HighlighterCard>

<script is:inline>

  const $demoArea = document.querySelector('.demo-usage-container .demo-area');

  setTimeout(() => {
    $demoArea.scroll($demoArea.scrollWidth/ 3, $demoArea.scrollHeight/ 3);
  }, 1000);

</script>

