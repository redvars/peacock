---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import Highlighter from '../../../../components/Highlighter.astro';
---

<style is:inline>
  .demo-tip-container .demo-area {
    height: 500px;
    overflow: auto;
  }

  .demo-tip-container .demo-area-inner {
    height: 300%;
    width: 300%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
</style>

<pc-text type='body'>
  Popover support different types of tips. You can use the <pc-text type='code'>tip</pc-text> attribute to set the tip type.
  The possible values are: <pc-text type='code'>tab</pc-text>, <pc-text type='code'>caret</pc-text>, <pc-text type='code'>none</pc-text>.
</pc-text>

<HighlighterCard lang='html' cssClasses='demo-tip-container'>


  <pc-popover id='popover' trigger='click' tip='tab' open>
    <p-icon name='settings' style='cursor: pointer'></p-icon>

    <pc-popover-content>
      <pc-input label='Name' layer='01'></pc-input>
      <pc-input label='Email' layer='01'></pc-input>
      <p-button>Submit</p-button>
    </pc-popover-content>

    <div slot='start'></div>
  </pc-popover>


</HighlighterCard>

<script is:inline>

  const $demoTipArea = document.querySelector('.demo-tip-container .demo-area');

  setTimeout(() => {
    $demoTipArea.scroll($demoTipArea.scrollWidth/ 3, $demoTipArea.scrollHeight/ 3);
  }, 1000);

</script>
