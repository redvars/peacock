---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<pc-text type="body" expressive>Here are several predefined button styles, each serving its own semantic purpose. </pc-text>

<HighlighterCard lang={'html'}>
<goat-tabs>
  <goat-tabs-list>
    <goat-tab>First tab</goat-tab>
    <goat-tab selected="true">Second tab</goat-tab>
    <goat-tab disabled>Disabled tab</goat-tab>
    <goat-tab>Last tab</goat-tab>
  </goat-tabs-list>

  <goat-tab-panel>
    <pc-text type="heading"> First tab content </pc-text>
  </goat-tab-panel>

  <goat-tab-panel>
    <pc-text type="heading"> Second tab content </pc-text>
  </goat-tab-panel>
</goat-tabs>

<br />
<br />

<goat-tabs>
  <goat-tabs-list>
    <goat-tab icon="home"></goat-tab>
    <goat-tab icon="circle--solid" selected="true">Circle</goat-tab>
    <goat-tab disabled icon="email">Email</goat-tab>
    <goat-tab icon="star--filled"></goat-tab>
  </goat-tabs-list>
</goat-tabs>
</HighlighterCard>
