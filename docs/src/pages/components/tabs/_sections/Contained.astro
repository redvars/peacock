---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<pc-text type="body" expressive>Here are several predefined button styles, each serving its own semantic purpose. </pc-text>

<HighlighterCard lang={'html'}  cssClasses='demo-canvas'>
<goat-tabs type='contained'>
  <goat-tabs-list>
    <goat-tab>First tab</goat-tab>
    <goat-tab selected="true">Second tab</goat-tab>
    <goat-tab disabled>Disabled tab</goat-tab>
    <goat-tab>Last tab</goat-tab>
  </goat-tabs-list>

  <goat-tab-panel class='layer-01'>
    <pc-text type="heading"> First content </pc-text>
  </goat-tab-panel>

  <goat-tab-panel class='layer-01'>
    <pc-text type="heading"> Second content </pc-text>
  </goat-tab-panel>

  <goat-tab-panel class='layer-01'>
    <pc-text type="heading"> Disabled </pc-text>
  </goat-tab-panel>

  <goat-tab-panel class='layer-01'>
    <pc-text type="heading"> Last content </pc-text>
  </goat-tab-panel>

</goat-tabs>

  <br/>


  <goat-tabs type='contained-bottom'>
    <goat-tab-panel class='layer-01'>
      <pc-text type="heading"> First content </pc-text>
    </goat-tab-panel>

    <goat-tab-panel class='layer-01'>
      <pc-text type="heading"> Second content </pc-text>
    </goat-tab-panel>

    <goat-tab-panel class='layer-01'>
      <pc-text type="heading"> Disabled </pc-text>
    </goat-tab-panel>

    <goat-tab-panel class='layer-01'>
      <pc-text type="heading"> Last content </pc-text>
    </goat-tab-panel>

    <goat-tabs-list>
      <goat-tab>First tab</goat-tab>
      <goat-tab selected="true">Second tab</goat-tab>
      <goat-tab disabled>Disabled tab</goat-tab>
      <goat-tab>Last tab</goat-tab>
    </goat-tabs-list>
  </goat-tabs>
</HighlighterCard>
