---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import Highlighter from '../../../../components/Highlighter.astro';
---
<HighlighterCard lang='html'>
  <pc-button id='click-me-btn'>Click me</pc-button>
  <pc-button disabled id='disabled-btn'>Disabled Button</pc-button>

  <script is:inline>
    document.querySelector('#click-me-btn').addEventListener('pc-button--click', (event) => {
      myConsole.log('Button clicked', 'pc-button--click');
    });
    document.querySelector('#disabled-btn').addEventListener('pc-button--click', (event) => {
      myConsole.log('Button clicked', 'pc-button--click'); // this will not be fired
    });
  </script>
</HighlighterCard>
