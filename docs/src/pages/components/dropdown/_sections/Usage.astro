---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import MenuItems from './dropdown-menu.astro';
---

<HighlighterCard lang='html'>

  <goat-dropdown>
    <pc-button>
      <pc-icon slot='icon' name='menu'></pc-icon>
    </pc-button>

    <MenuItems/>
  </goat-dropdown>
</HighlighterCard>

<HighlighterCard lang='html'>
  <goat-dropdown id='dropdown' placements='bottom-end'>
    <pc-button variant='text'><pc-icon slot='icon' name='menu'/></pc-button>

    <MenuItems/>
  </goat-dropdown>
</HighlighterCard>

