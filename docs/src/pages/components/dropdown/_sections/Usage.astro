---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
import MenuItems from './dropdown-menu.astro';
---

<HighlighterCard lang='html'>

  <pc-dropdown>
    <pc-button>
      <p-icon slot='icon' name='menu'></p-icon>
    </pc-button>

    <MenuItems/>
  </pc-dropdown>
</HighlighterCard>

<HighlighterCard lang='html'>
  <pc-dropdown id='dropdown' placements='bottom-end'>
    <pc-button variant='text'><p-icon slot='icon' name='menu'/></pc-button>

    <MenuItems/>
  </pc-dropdown>
</HighlighterCard>

