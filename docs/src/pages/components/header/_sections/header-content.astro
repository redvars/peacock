---
---
<div slot='right'>
  <goat-header-action icon='light_mode' class='theme-switcher'></goat-header-action>

  <goat-header-action class='icon-only' color='primary' selected>
    <goat-badge content='3' class='color-error'>
      <p-icon name='notification'></p-icon>
    </goat-badge>
  </goat-header-action>

  <goat-header-action>
    <div class='avatar-container'>
      <pc-avatar src='/assets/img/avatar.webp' name='Shivaji Varma' size='1.75rem'></pc-avatar>
      <pc-text class='inherit' inline>Shivaji Varma</pc-text>
    </div>
  </goat-header-action>

  <pc-dropdown placements='bottom-end'>
    <goat-header-action icon='thumbnail--2'></goat-header-action>
    <pc-dropdown-menu class='menu' style='width: 200px'>
      <pc-menu-item value='cut'>
        <p-icon name='cut' slot='start'></p-icon>
        Cut
        <span slot='end'>⌘X</span>
      </pc-menu-item>
      <pc-menu-item value='copy'>
        <p-icon name='copy' slot='start'></p-icon>
        Copy
        <span slot='end'>⌘C</span>
      </pc-menu-item>
      <pc-menu-item value='paste'>
        <p-icon name='paste' slot='start'></p-icon>
        Paste
        <span slot='end'>⌘X</span>
      </pc-menu-item>
      <pc-divider></pc-divider>
      <pc-menu-item value='delete'>
        <p-icon name='trash-can' slot='start'></p-icon>
        Delete
        <span slot='end'>←</span>
      </pc-menu-item>
    </pc-dropdown-menu>
  </pc-dropdown>
</div>
