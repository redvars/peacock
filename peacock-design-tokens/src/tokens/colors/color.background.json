{
  "color": {
    "$type": "color",
    "background": {
      "@": {
        "$value": "{color.white}",
        "$darkValue": "{color.gray.900}"
      },
      "hover": {
        "$value": "rgba({color.gray.500}, 0.12)",
        "$darkValue": "rgba({color.gray.500}, 0.16)"
      },
      "active": {
        "$value": "rgba({color.gray.500}, 0.5)",
        "$darkValue": "rgba({color.gray.500}, 0.6)"
      },
      "inverse": {
        "$value": "{color.gray.900}",
        "$darkValue": "{color.white}"
      }
    }
  }
}
