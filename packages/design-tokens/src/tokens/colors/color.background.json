{
  "color": {
    "$type": "color",
    "background": {
      "@": {
        "$value": "{color.white}",
        "$extensions": {
          "mode": {
            "dark": "{color.gray.900}"
          }
        }
      },
      "hover": {
        "$value": "{color.gray.500}",
        "$extensions": {
          "org.terrazzo.operations": [{ "alpha": 0.12 }]
        }
      },
      "active": {
        "$value": "{color.gray.500}",
        "$extensions": {
          "org.terrazzo.operations": [{ "alpha": 0.12 }],
          "mode": {
            "dark": "{color.gray.500}"
          }
        }
      },
      "inverse": {
        "$value": "{color.gray.900}",
        "$extensions": {
          "mode": {
            "dark": "{color.white}"
          }
        }
      }
    }
  }
}
