---
import HighlighterCard from '../../../../components/HighlighterCard.astro';
---
<pc-text type="body" expressive>Here are several predefined button styles, each serving its own semantic purpose. </pc-text>

<HighlighterCard lang={'html'}>
<pc-tabs>
  <pc-tabs-list>
    <pc-tab>First tab</pc-tab>
    <pc-tab selected="true">Second tab</pc-tab>
    <pc-tab disabled>Disabled tab</pc-tab>
    <pc-tab>Last tab</pc-tab>
  </pc-tabs-list>

  <pc-tab-panel>
    <pc-text type="heading"> First tab content </pc-text>
  </pc-tab-panel>

  <pc-tab-panel>
    <pc-text type="heading"> Second tab content </pc-text>
  </pc-tab-panel>
</pc-tabs>

<br />
<br />

<pc-tabs>
  <pc-tabs-list>
    <pc-tab icon="home"></pc-tab>
    <pc-tab icon="circle--solid" selected="true">Circle</pc-tab>
    <pc-tab disabled icon="email">Email</pc-tab>
    <pc-tab icon="star--filled"></pc-tab>
  </pc-tabs-list>
</pc-tabs>
</HighlighterCard>
