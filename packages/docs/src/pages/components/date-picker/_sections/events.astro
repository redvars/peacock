---
import Highlighter from '../../../../components/Highlighter.astro';
---

<pc-text type='body'>On input change a <b>CustomEvent</b> <code class='highlighter-rouge'
                                                                  data-lang='html'>goat:change</code> is triggered by
  the element.
</pc-text>

<goat-card>
  <pc-card-content>
    <goat-date-picker id='date-field' placeholder='Type here'></goat-date-picker>

    <script is:inline>
      document.querySelector('#date-field').addEventListener('goat-date-picker--input', function(event) {
        myConsole.log('goat-date-picker--input :: ' + event.target.value);
      });
      document.querySelector('#date-field').addEventListener('goat-date-picker--change', function(event) {
        myConsole.warn('goat-date-picker--change :: ' + event.target.value);
      });
    </script>
  </pc-card-content>
  <pc-card-content class='no-padding'>
    <Highlighter lang='javascript' is:raw>
      document.querySelector('#date-field').addEventListener('goat-date-picker--input', function (event) {
      myConsole.log('goat-date-picker--input :: ' + event.target.value);
    });
      document.querySelector('#date-field').addEventListener('goat-date-picker--change', function (event) {
      myConsole.warn('goat-date-picker--change :: ' + event.target.value);
    });
    </Highlighter>
  </pc-card-content>
</goat-card>
