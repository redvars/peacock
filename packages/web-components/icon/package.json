{
  "name": "pc-button",
  "description": "Webcomponent pc-button following open-wc recommendations",
  "license": "MIT",
  "author": "pc-button",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./pc-button.js": "./dist/src/pc-button.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "rollup -c && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "rollup -c && npm run analyze -- --exclude dist",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "web-dev-server": "web-dev-server --node-resolve --open"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@web/dev-server": "^0.4.6",
    "concurrently": "^8.2.2",
    "lit": "^3.3.2",
    "rollup": "^4.54.0",
    "rollup-plugin-scss-lit": "^2.1.0",
    "sass": "^1.97.1",
    "tslib": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "customElements": "custom-elements.json"
}
