{
  "name": "@peacockui/icon",
  "description": "Webcomponent pc-icon following open-wc recommendations",
  "bugs": {
    "url": "https://github.com/goatui/components/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goatui/components.git"
  },
  "license": "Apache-2.0",
  "author": "Shivaji Varma <contact@shivajivarma.com>",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/index.js",
    "./pc-icon.js": "./dist/src/pc-icon.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "rollup -c && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\"",
    "build": "rollup -c && npm run analyze -- --exclude dist",
    "prepublish": "rollup -c && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "prepare": "husky",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\""
  },
  "dependencies": {
    "lit": "^3.1.4"
  },
  "devDependencies": {
    "lit-html": "^3.1.4",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@types/mocha": "^10.0.7",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@web/dev-server": "^0.4.6",
    "@web/test-runner": "^0.18.2",
    "@rollup/plugin-typescript": "^12.3.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rollup-plugin-scss-lit": "^2.1.0",
    "sass": "^1.97.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
